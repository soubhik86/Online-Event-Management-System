<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin / Organizer Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #0f172a; /* dark slate */
      font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
      max-width: 900px;
      margin: 50px auto;
      background-color: #ffffff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }

    .login-image {
      background-image: url("/images/login/login.jpg");
      background-size: cover;
      background-position: center;
      min-height: 100%;
    }

    .login-form {
      padding: 40px;
      background-color: #1e293b; /* dark gray */
      color: #ffffff;
    }

    .form-control {
      background-color: #334155;
      color: #ffffff;
      border: none;
    }

    .form-control:focus {
      background-color: #334155;
      color: #ffffff;
      border-color: #38bdf8;
      box-shadow: 0 0 0 0.2rem rgba(56, 189, 248, 0.25);
    }

    .form-label {
      color: #e2e8f0;
    }

    .btn-success {
      background-color: #22c55e;
      border: none;
    }

    .btn-success:hover {
      background-color: #16a34a;
    }

    .btn-link {
      color: #38bdf8;
    }

    .btn-link:hover {
      color: #0ea5e9;
    }

    @media (max-width: 768px) {
      .login-image {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row login-container">
      <!-- Left Image Section -->
      <div class="col-md-6 d-none d-md-block login-image"></div>

      <!-- Right Form Section -->
      <div class="col-md-6 login-form">
        <h3 class="mb-4 text-center fw-bold text-white">Admin / Organizer Login</h3>
        <form action="/admin/login" method="POST">
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" required />
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success">Login</button>
            <a href="/admin/register" class="btn btn-link text-center">Create Account</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
